@model IEnumerable<StudyTweets.Controllers.VideoWithTechnology>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.video.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.video.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.video.uploadfile)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.technolgy.technologyname)
            </th>
           
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.video.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.video.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.video.uploadfile)
                @*<video id="sampleMovie" width="320" height="240" src="~/UploadedImages/@item.video.uploadfile" controls></video>*@
                   
   
                <iframe width="320"
                       height="240"        
                        src="~/UploadedImages/@item.video.uploadfile"
                        frameborder="0"
                        allowfullscreen></iframe>
</td>
            <td>
                @Html.DisplayFor(modelItem => item.technolgy.technologyname)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.video.videoid }) |
                @Html.ActionLink("Details", "Details", new { id=item.video.videoid }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.video.videoid })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
